<h1 style="text-align: center;">My Tasks</h1>

<% @tasks.each do |task| %>
  <div style="border: 1px solid #ccc; padding: 15px; margin: 10px;">
    <h2><%= task.description %></h2>
    <p><strong>Category:</strong> <%= task.category&.category_name %></p>

<div style="display: inline-flex; gap: 10px; align-items: center;">
  <%= link_to 'Edit Task', edit_task_path(task), style: "padding: 6px 12px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px;" %>

  <%= button_to 'Delete', task_path(task.id), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' },
      form: { style: "display:inline" },
      style: "padding: 6px 12px; background-color: #dc3545; color: white; border: none; border-radius: 4px; cursor: pointer;" %>
</div>

  </div>
<% end %>

