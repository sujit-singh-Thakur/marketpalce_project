<h1 style="text-align: center;">Edit Task</h1>

<div style="max-width: 500px; margin: 0 auto;">
  <%= form_with model: [:admin, @task], local: true do |form| %>
    
    <div style="margin-bottom: 15px;">
      <%= form.label :description, "Description", style: "display: block; font-weight: bold; text-transform: capitalize;" %>
      <%= form.text_field :description, style: "width: 100%; padding: 8px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :contact_info, "Contact Info", style: "display: block; font-weight: bold; text-transform: capitalize;" %>
      <%= form.text_field :contact_info, style: "width: 100%; padding: 8px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :contractor_id, "Contractor", style: "display: block; font-weight: bold; text-transform: capitalize;" %>
      <%= form.collection_select :contractor_id, Contractor.all, :id, :name, { prompt: "Select Contractor" }, { style: "width: 100%; padding: 8px;" } %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :category_id, "Category", style: "display: block; font-weight: bold; text-transform: capitalize;" %>
      <%= form.collection_select :category_id, Category.all, :id, :category_name, { prompt: "Select Category" }, { style: "width: 100%; padding: 8px;" } %>
    </div>

    <div style="text-align: center;">
      <%= form.submit 'Update Task', style: "padding: 10px 20px; font-weight: bold; text-transform: uppercase; background-color: #007BFF; color: white; border: none; border-radius: 5px;" %>
    </div>

  <% end %>

  <div style="text-align: center; margin-top: 15px;">
    <%= link_to 'Back', admin_tasks_path, style: "text-decoration: none; color: #007BFF;" %>
  </div>
</div>
