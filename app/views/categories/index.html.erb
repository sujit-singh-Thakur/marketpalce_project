<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div style="font-family: Arial, sans-serif; padding: 20px; max-width: 960px; margin: auto;">

  <!-- Heading -->
  <h1 style="text-align: center; margin-bottom: 40px; color: #343a40;">All Categories</h1>

  <!-- Responsive Table -->
  <div style="overflow-x: auto; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border-radius: 8px;">
    <table style="width: 100%; border-collapse: collapse; min-width: 600px;">
      <thead>
        <tr style="background-color: #007bff; color: white;">
          <th style="padding: 14px; border: 1px solid #dee2e6; text-align: left;">Name</th>
          <th style="padding: 14px; border: 1px solid #dee2e6; text-align: center;">Edit</th>
          <th style="padding: 14px; border: 1px solid #dee2e6; text-align: center;">Delete</th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr style="background-color: #fff;">
            <td style="padding: 14px; border: 1px solid #dee2e6;"><%= category.category_name %></td>
            <td style="padding: 14px; border: 1px solid #dee2e6; text-align: center;">
              <%= link_to 'Edit', edit_category_path(category), style: "color: #007bff; text-decoration: none;" %>
            </td>
            <td style="padding: 14px; border: 1px solid #dee2e6; text-align: center;">
              <%= button_to 'Delete', category_path(category.id),
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    form: { style: "display:inline;" },
                    style: "background-color: #dc3545; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer;" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Action Buttons -->
  <div style="margin-top: 40px; display: flex; gap: 20px; justify-content: center; flex-wrap: wrap;">
    <%= link_to 'Add New Category', new_category_path, style: "background-color: #28a745; color: white; padding: 12px 24px; border-radius: 5px; text-decoration: none; font-weight: bold;" %>
    <%= link_to 'Back', home_contractors_path, style: "background-color: #6c757d; color: white; padding: 12px 24px; border-radius: 5px; text-decoration: none; font-weight: bold;" %>
  </div>

</div>
