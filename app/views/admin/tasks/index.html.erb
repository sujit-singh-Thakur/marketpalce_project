<h1>All Tasks</h1>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>contact_info</th>
      <th>Category</th>
      <th>contractor_name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.contact_info %></td>
         <td><%= task.category.category_name if task.contractor %></td>
        <td><%= task.contractor.name if task.category %></td>
        <td>
          <%= link_to 'Edit', edit_admin_task_url(task),method: :PUT  %>
          <%= link_to 'Delete', admin_task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
