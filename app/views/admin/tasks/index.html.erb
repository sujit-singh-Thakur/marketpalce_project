<h1>All Tasks</h1>

 <%= link_to 'create new task', new_task_url, data: { confirm: 'Are you sure?' } %>
 <br>
 <br>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>contact_info</th>
      <th>Category</th>
      <th>contractor_name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.contact_info %></td>
         <td><%= task.category.category_name if task.contractor %></td>
        <td><%= task.contractor.name if task.category %></td>
        
       <td><%= link_to 'Edit', edit_admin_task_url(task.id)%></td>
          <td> <%= button_to 'Delete', admin_task_path(task.id), method: :delete, :onclick => "return confirm('Are you sure you want to delete this task?')" %></td>
          <td><%= link_to 'view',  admin_task_url(task.id)%> </td>
        
      </tr>
    <% end %>


    

  </tbody>
</table>
