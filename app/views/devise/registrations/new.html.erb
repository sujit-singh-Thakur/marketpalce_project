



<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f8f9fa;">
  <div style="width: 400px; padding: 30px; background-color: white; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
    <h2 style="text-align: center; margin-bottom: 20px;">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" style="margin-bottom: 15px;">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <div class="field" style="margin-bottom: 15px;">
       <%= f.label :email %><br />
       <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <div class="field" style="margin-bottom: 15px;">
          <%= f.label :password %>
         <% if @minimum_password_length %>
         <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <div class="field" style="margin-bottom: 15px;">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <div class="field" style="margin-bottom: 15px;">
        <%= f.label :type, "Role" %><br />
        <%= f.select :type, options_for_select([['Contractor', 'Contractor'], ['Worker', 'Worker']]), {}, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <div class="actions" style="text-align: center;">
        <%= f.submit "Sign up", style: "padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;" %>
      </div>
    <% end %>

    <div style="margin-top: 20px; text-align: center;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>








