<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div style="padding: 20px; font-family: Arial, sans-serif; max-width: 1000px; margin: auto;">
  <h1 style="text-align: center; margin-bottom: 30px;">All Categories</h1>

  <!-- Responsive Table Wrapper -->
  <div style="overflow-x: auto;">
    <table style="width: 100%; border-collapse: collapse; min-width: 500px;">
      <thead>
        <tr style="background-color: #f2f2f2;">
          <th style="padding: 12px; border: 1px solid #ddd;">Name</th>
          <th style="padding: 12px; border: 1px solid #ddd;">Edit</th>
          <th style="padding: 12px; border: 1px solid #ddd;">Delete</th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td style="padding: 12px; border: 1px solid #ddd;"><%= category.category_name %></td>
            <td style="padding: 12px; border: 1px solid #ddd;"><%= link_to 'Edit', edit_category_path(category), style: "color: #007bff; text-decoration: none;" %></td>
            <td style="padding: 12px; border: 1px solid #ddd;">
              <%= button_to 'Delete', category_path(category.id), method: :delete, data: { confirm: 'Are you sure?' },
                  form: { style: "display: inline;" },
                  style: "background-color: #dc3545; color: white; padding: 6px 12px; border: none; border-radius: 4px; cursor: pointer;" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Footer Buttons -->
  <div style="margin-top: 30px; display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
    <%= link_to 'Add New Category', new_category_path, style: "background-color: #28a745; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;" %>
    <%= link_to 'Back', home_contractors_path, style: "background-color: #6c757d; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;" %>
  </div>
</div>
