
<%= link_to  "create new task" , new_task_url %>
<br>
<h1>All Tasks</h1>
<table>   
  <thead>
    <tr>
      <th>Description</th>
      <th>Contractor</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.contractor.name if task.contractor %></td>
       
         <td><%= task.category.category_name if task.contractor %></td>
        
        <td>
          <%= link_to 'Show', admin_task_path(task) %> |
          <%= link_to 'Edit', edit_admin_task_path(task) %> |
         <td><%= button_to 'Delete', admin_task_url(task.id), method: :delete, :onclick => "return confirm('Are you sure you want to delete this task?')" %> </td>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

